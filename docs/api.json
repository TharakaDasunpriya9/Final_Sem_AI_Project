                        }
                    },
                    {
                        "name":"limit",
                        "in":"query",
                        "schema":{
                            "type":"string"
                        }
                    }
                ],
                "responses":{
                    "200":{
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/User"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components":{
        "schemas":{
            "User":{
                "type":"object",
                "properties":{
                    "id":{
                        "type":"integer"
                    },
                    "name":{
                        "type":"string"
                    }
                }
            }
        }
    }
